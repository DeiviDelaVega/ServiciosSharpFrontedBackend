@model List<Shared.Models.InmuebleDto>

@{
    Layout = null;
    ViewData["Title"] = "Mantenimiento de Inmuebles";
    @Html.Partial("_NavAdmin")
}

<link rel="stylesheet" href="@Url.Content("~/css/MantInmueble.css")" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <br />
    <div class="list-clientes-container fade-in">
        <br />
        <h2 class="section-title"><strong>MANTENIMIENTO DE INMUEBLES</strong></h2>
        <br>
        <div class="d-flex mb-3" style="gap: 16px;">
            <a asp-controller="Inmueble" asp-action="Create" class="btn btn-dark px-4 py-2 fs-6">
                Agregar Inmueble
            </a>

            <button id="toggleFiltrosBtn" class="btn btn-outline-secondary px-4 py-2 fs-6">
                <i class="fa fa-sliders-h me-2"></i> Filtros
            </button>
        </div>

        <!-- Filtros -->
        <div id="filtrosForm" style="display:@(
                              !string.IsNullOrEmpty(ViewBag.Filtro?.ToString()) ||
                              !string.IsNullOrEmpty(ViewBag.Disponibilidad?.ToString()) ||
                              ViewBag.AdminId != null ? "block" : "none")">
            <form asp-action="Index" method="get" class="filtro-container">
                <div class="form-row row mb-3">
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="control-label mr-2" style="width: 160px;">Descripción o Servicio</label>
                        <input type="text" name="filtro" value="@ViewBag.Filtro" placeholder="Buscar descripción o servicio"
                               class="form-control" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="control-label mr-2" style="width: 120px;">Disponibilidad</label>
                        <select name="disponibilidad" class="form-control">
                            <option value="">Seleccionar</option>
                            <option value="Si" selected="@(ViewBag.Disponibilidad?.ToString() == "Si")">Si</option>
                            <option value="No" selected="@(ViewBag.Disponibilidad?.ToString() == "No")">No</option>
                        </select>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="col-md-6 d-flex align-items-center mb-2">
                        <label class="control-label mr-2" style="width: 120px;">Administrador</label>
                        <select name="adminId" class="form-control" style="margin-left: 59px;"
                                asp-items="ViewBag.Administradores">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center mb-2">
                        <button type="submit" class="btn btn-dark mr-2" style="margin-left: 17px; margin-right: 17px;">Buscar</button>
                        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center align-middle">ID Inmueble</th>
                        <th class="text-center align-middle">Nombre</th>
                        <th class="text-center align-middle">Capacidad</th>
                        <th class="text-center align-middle">Servicios Incluidos</th>
                        <th class="text-center align-middle">Disponibilidad</th>
                        <th class="text-center align-middle">Precio Por Noche</th>
                        <th class="text-center align-middle">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var inmueble in Model)
                        {
                            <tr>
                                <td class="text-center">@inmueble.IdInmueble</td>
                                <td>@inmueble.Nombre</td>
                                <td class="text-center">@inmueble.Capacidad</td>
                                <td>@inmueble.ServiciosIncluidos</td>
                                <td class="text-center" style="color:@(inmueble.Disponibilidad == "Si" ? "green" : "red")">
                                    @inmueble.Disponibilidad
                                </td>
                                <td class="text-end text-center">@inmueble.PrecioPorNoche.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@inmueble.IdInmueble" title="Detalles">
                                        <i class="fa fa-magnifying-glass icon-action"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@inmueble.IdInmueble" title="Editar">
                                        <i class="fa fa-pen icon-action"></i>
                                    </a>
                                    <a href="javascript:void(0);"
                                       onclick="confirmarEliminacion(@inmueble.IdInmueble)"
                                       title="Eliminar">
                                        <i class="fa fa-trash icon-action text-danger"></i>
                                    </a>
                                    <form id="anti-forgery-form" style="display:none;">
                                        @Html.AntiForgeryToken()
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No hay datos en la tabla de inmuebles</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const filtros = document.getElementById("filtrosForm");
                const boton = document.getElementById("toggleFiltrosBtn");

                const visible = localStorage.getItem("filtrosVisibles") === "true";
                filtros.style.display = visible ? "block" : "none";

                boton.innerHTML = visible
                    ? 'Ocultar Filtros'
                    : '<i class="fa fa-sliders-h me-1"></i> Filtros';

                boton.addEventListener("click", function () {
                    const currentlyVisible = filtros.style.display === "block";
                    filtros.style.display = currentlyVisible ? "none" : "block";
                    localStorage.setItem("filtrosVisibles", !currentlyVisible);
                    boton.innerHTML = !currentlyVisible
                        ? 'Ocultar Filtros'
                        : '<i class="fa fa-sliders-h me-1"></i> Filtros';
                });
            });

            function confirmarEliminacion(id) {
                Swal.fire({
                    title: '¿Estás seguro de eliminar este inmueble?',
                    text: "Esta acción no se puede deshacer",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {

                        // Obtén el token anti-forgery del formulario
                        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                        fetch(`/Inmueble/Delete`, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': token,
                                'Content-Type': 'application/x-www-form-urlencoded'
                            },
                            body: `id=${id}`
                        })
                        .then(res => {
                            if (res.ok) {
                                Swal.fire({
                                    title: '¡Inmueble eliminado!',
                                    text: 'El inmueble se ha eliminado correctamente',
                                    icon: 'success',
                                    confirmButtonText: 'Aceptar'
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('Error', 'No se pudo eliminar el inmueble', 'error');
                            }
                        })
                        .catch(() => {
                            Swal.fire('Error', 'No se pudo eliminar el inmueble', 'error');
                        });
                    }
                });
            }
        </script>
        <nav>
            <!-- Primera -->
            <a class="btn btn-outline-secondary m-1 @(ViewBag.PaginaActual == 1 ? "disabled" : "")"
               asp-action="Index"
               asp-route-pagina="1"
               asp-route-filtro="@ViewBag.Filtro"
               asp-route-disponibilidad="@ViewBag.Disponibilidad"
               asp-route-adminId="@ViewBag.AdminId">
                Primera
            </a>

            <!-- Prev -->
            <a class="btn btn-outline-secondary m-1 @(ViewBag.PaginaActual == 1 ? "disabled" : "")"
               asp-action="Index"
               asp-route-pagina="@(ViewBag.PaginaActual - 1)"
               asp-route-filtro="@ViewBag.Filtro"
               asp-route-disponibilidad="@ViewBag.Disponibilidad"
               asp-route-adminId="@ViewBag.AdminId">
                &laquo; Prev
            </a>

            <!-- Números de página -->
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                if (i == ViewBag.PaginaActual)
                {
                    <span class="btn btn-dark m-1">@i</span>
                }
                else
                {
                    <a class="btn btn-outline-secondary m-1"
                       asp-action="Index"
                       asp-route-pagina="@i"
                       asp-route-filtro="@ViewBag.Filtro"
                       asp-route-disponibilidad="@ViewBag.Disponibilidad"
                       asp-route-adminId="@ViewBag.AdminId">@i</a>
                }
            }

            <!-- Next -->
            <a class="btn btn-outline-secondary m-1 @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")"
               asp-action="Index"
               asp-route-pagina="@(ViewBag.PaginaActual + 1)"
               asp-route-filtro="@ViewBag.Filtro"
               asp-route-disponibilidad="@ViewBag.Disponibilidad"
               asp-route-adminId="@ViewBag.AdminId">
                Next &raquo;
            </a>

            <!-- Última -->
            <a class="btn btn-outline-secondary m-1 @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")"
               asp-action="Index"
               asp-route-pagina="@ViewBag.TotalPaginas"
               asp-route-filtro="@ViewBag.Filtro"
               asp-route-disponibilidad="@ViewBag.Disponibilidad"
               asp-route-adminId="@ViewBag.AdminId">
                Última
            </a>
        </nav>
    </div>
</body>