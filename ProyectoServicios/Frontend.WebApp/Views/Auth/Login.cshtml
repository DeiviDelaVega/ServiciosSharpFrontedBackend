@model Shared.Models.LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <link rel="stylesheet" href="@Url.Content("~/css/Login.css")" />
    <div class="row g-0 login-row">
        <div class="col-12 col-lg-4 d-flex align-items-center justify-content-center bg-white">
            <div class="login-box w-75">
                <h3 class="mb-4">Inicio de sesión</h3>

                <form method="post" asp-action="Login">
                    <div class="mb-3">
                        <label class="form-label">Correo electrónico</label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="cliente@example.com" />
                        <span asp-validation-for="Correo" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input asp-for="Clave" type="password" class="form-control" placeholder="Tu contraseña" />
                        <span asp-validation-for="Clave" class="invalid-feedback"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                    {
                        <div class="alert alert-danger">@ViewBag.Mensaje</div>
                    }

                    @if (TempData["LogoutMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["LogoutMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <button type="submit" class="btn btn-dark w-100">Iniciar sesión</button>
                </form>

                <div class="mt-3 small">
                    ¿No tienes cuenta?
                    <a asp-controller="Auth" asp-action="RegistroCliente"><b>Regístrate aquí</b></a>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8 d-none d-lg-block p-0 login-right">
            <img src="@Url.Content("~/imagenes/fondoPolo.png")" alt="Ilustración" class="login-img w-100 h-100" style="object-fit: cover;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const inputs = document.querySelectorAll(".form-control");

            inputs.forEach(input => {
                input.addEventListener("blur", () => { // al salir del input
                    if (input.classList.contains("input-validation-error")) {
                        input.classList.add("is-invalid");
                    } else {
                        input.classList.remove("is-invalid");
                    }
                });

                input.addEventListener("input", () => { // mientras escribe
                    if (!input.classList.contains("input-validation-error")) {
                        input.classList.remove("is-invalid");
                    }
                });
            });
        });
    </script>
}