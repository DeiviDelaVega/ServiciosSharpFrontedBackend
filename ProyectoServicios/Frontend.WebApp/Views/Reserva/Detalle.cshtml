@model Shared.Models.ReservaDto

@{
    Layout = null;
    ViewData["Title"] = "Detalle de Reserva";
    @Html.Partial("_NavAdmin")
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Segoe UI', 'Tahoma', 'Geneva', 'Verdana', 'sans-serif'],
                    },
                    colors: {
                        'primary-dark': '#333333',
                        'secondary-dark': '#555555',
                        'accent-blue': '#3b82f6',
                    }
                }
            }
        }
    </script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body class="font-sans bg-[#f5f5f5] text-[#1a1a1a]">
    <br />

    <div class="max-w-2xl mx-auto my-5 p-6 bg-white rounded-lg shadow-xl animate-fade-in">
        <h2 id="page-title" class="text-2xl font-normal text-center text-[#333] mb-4 tracking-wider uppercase drop-shadow-[3px_3px_6px_rgba(50,50,50,0.6)]">
            Detalle de reserva con ID @Model.ID_Solicitud
        </h2>

        <div class="p-8 border-t-4 border-primary-dark rounded-xl transition-all duration-300 hover:transform hover:-translate-y-1">
            <h4 class="text-center text-lg font-semibold text-secondary-dark mb-4">Información registrada</h4>
            <hr class="mb-4" />

            <div class="flex flex-col md:flex-row gap-4 mb-4">
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">ID Cliente</label>
                    <input type="text" value="@Model.ID_Cliente" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">ID Inmueble</label>
                    <input type="text" value="@Model.ID_Inmueble" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-4 mb-4">
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Fecha Solicitud</label>
                    <input type="text" value="@Model.Fecha_Solicitud.ToString("dd/MM/yyyy")" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Método de Pago</label>
                    <input type="text" value="@Model.Metodo_Pago" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-4 mb-4">
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Fecha Inicio</label>
                    <input type="text" value="@Model.Fecha_Inicio_Reserva.ToString("dd/MM/yyyy")" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Fecha Fin</label>
                    <input type="text" value="@Model.Fecha_Fin_Reserva.ToString("dd/MM/yyyy")" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-4 mb-4">
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Monto Total</label>
                    <input type="text" value="S/. @Model.Monto_Total.ToString("N2")" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
                <div class="w-full md:w-1/2">
                    <label class="block text-base font-bold text-[#333] mb-1">Estado</label>
                    <input type="text" value="@Model.Estado_Reserva" class="block w-full p-2.5 bg-[#e9ecef] border border-[#ccc] rounded-lg text-lg" disabled />
                </div>
            </div>

            <div class="flex justify-center mt-8">
                <a href="/Reserva/Index" class="w-40 h-12 flex items-center justify-center px-6 py-2 bg-[#555] text-white font-bold rounded-lg shadow-lg hover:bg-[#333] transition duration-300 ease-in-out hover:scale-105">
                    Volver
                </a>
            </div>
        </div>
    </div>
</body>
</html>