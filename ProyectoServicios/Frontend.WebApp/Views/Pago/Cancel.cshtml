@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-5 text-center">
    <h2 class="text-danger">Pago Cancelado</h2>
    <p>No se pudo completar el pago. Inténtalo nuevamente.</p>
    <a asp-controller="Catalogo" asp-action="ListarInmuebles" class="btn btn-secondary mt-3">Volver al inicio</a>
</div>

<script>
    Swal.fire({ icon: 'error', title: 'Pago cancelado', text: 'La transacción no se completó.' });
</script>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center mt-3">
        @ViewBag.Error
    </div>
}
