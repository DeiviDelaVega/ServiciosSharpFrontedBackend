<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web de Reservas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-dark custom-navbar">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Auth" asp-action="PaginaInicio">
                <img src="@Url.Content("~/imagenes/nav_image.png")" alt="Logo" width="40" height="40">
                <div>
                    <span>Web de Reservas</span>
                    <small>Monterrico Polo</small>
                </div>
            </a>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>