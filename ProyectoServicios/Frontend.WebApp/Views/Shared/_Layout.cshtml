@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (!(currentController == "Auth" && currentAction == "Login"))
        {
            <nav class="bg-primary-dark shadow-md text-white">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center h-16">
                        <div class="flex items-center">
                            <span class="text-2xl font-bold">Web de Reservas</span>
                            <div class="hidden md:flex ml-10 space-x-4">
                                <a asp-controller="Admin" asp-action="Index" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-secondary-dark">Inicio</a>
                                <a asp-controller="Cliente" asp-action="ListClientes" class="px-3 py-2 rounded-md text-sm font-medium bg-secondary-dark">
                                    Mantenimiento de Clientes
                                </a>
                                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-secondary-dark">Mantenimiento de Inmuebles</a>
                                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-secondary-dark">Mantenimiento de Reservas</a>
                                <div class="relative group">
                                    <a href="#" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-secondary-dark">
                                        Reportes <i class="fas fa-caret-down ml-1"></i>
                                    </a>
                                    <div class="absolute hidden group-hover:block bg-primary-dark text-white rounded-md shadow-lg z-10 w-48">
                                        <a href="#" class="block px-4 py-2 text-sm hover:bg-secondary-dark">Reporte 1</a>
                                        <a href="#" class="block px-4 py-2 text-sm hover:bg-secondary-dark">Reporte 2</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <a asp-controller="Auth" asp-action="Logout" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-secondary-dark">Cerrar sesión</a>
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Frontend.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
