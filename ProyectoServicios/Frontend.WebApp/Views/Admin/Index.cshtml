@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
    ViewData["Title"] = "Panel de Admin";
    @Html.Partial("_NavAdmin")
}

<br />
<body>
	<br />
	<link rel="stylesheet" href="@Url.Content("~/css/PaginaInicioAdminCliente.css")" />
	<div class="fade-in">
		@if (HttpContextAccessor.HttpContext.Session.GetString("nombreUsuario") != null)
		{
			<h1 class="text-center">Hola <span>@HttpContextAccessor.HttpContext.Session.GetString("nombreUsuario")</span></h1>
		}
		<h2 class="text-center">
			Bienvenido a la vista de ADMINISTRADOR
		</h2>
		<br>
		<div class="banner-container">
			<img src="@Url.Content("~/imagenes/banner1.jpg")" id="banner" />
		</div>
		<br>
	</div>
	<script src="@Url.Content("~/js/AdminJs.js")"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
